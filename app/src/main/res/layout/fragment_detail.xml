<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/txtDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imgDetailPoster"
        android:layout_below="@id/txtDetailTitle"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtDetailOverview"
        android:layout_width="match_parent"
        android:layout_below="@id/txtDetailTitle"
        android:layout_toRightOf="@id/imgDetailPoster"
        android:layout_height="300dp"
        android:textSize="15sp"
        android:layout_marginRight="5dp"
        android:text="Text"
        />

    <TextView
        android:layout_below="@id/imgDetailPoster"
        android:layout_margin="15dp"
        android:textAlignment="textStart"
        android:text=""
        android:id="@+id/txtDetailOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        />
</RelativeLayout>
</ScrollView>